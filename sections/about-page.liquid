{% stylesheet %}
.about-page {
  padding: 4rem 0;
  min-height: 60vh;
}

.about-content {
  max-width: 600px;
  margin: 0 auto;
  text-align: center;
}

.about-title {
  font-family: 'Libre Caslon Text', serif;
  font-size: 1.4rem;
  letter-spacing: 0.3em;
  color: #AB8666;
  margin-bottom: 3rem;
}

.shop-name {
  font-family: 'Libre Caslon Text', serif;
  font-size: 2.4rem;
  letter-spacing: 0.15em;
  color: #252525;
  margin-bottom: 2rem;
}

.shop-details {
  margin-bottom: 2rem;
}

.shop-info {
  margin: 0 0 1rem;
}

.shop-info dt {
  font-family: 'Libre Caslon Text', serif;
  font-size: 1.2rem;
  letter-spacing: 0.1em;
  color: #AB8666;
  margin-bottom: 0.3rem;
}

.shop-info dd {
  font-size: 1.5rem;
  color: #252525;
  margin: 0;
}

.shop-description {
  margin-top: 2rem;
}

.shop-description p {
  font-size: 1.5rem;
  line-height: 2;
  color: #666;
  margin-bottom: 1rem;
}

@media (max-width: 768px) {
  .about-page {
    padding: 3rem 1.5rem;
  }

  .shop-name {
    font-size: 2rem;
  }

  .shop-description p {
    font-size: 1.4rem;
  }
}

@media (max-width: 480px) {
  .about-page {
    padding: 2rem 1rem;
  }

  .about-title {
    font-size: 1.2rem;
    letter-spacing: 0.2em;
    margin-bottom: 2rem;
  }

  .shop-name {
    font-size: 1.8rem;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
  }

  .shop-info dd {
    font-size: 1.4rem;
  }

  .shop-description p {
    font-size: 1.3rem;
    line-height: 1.8;
  }
}
{% endstylesheet %}
