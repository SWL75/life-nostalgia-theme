{%- comment -%}
  Main Cart Section
  LIFE NOSTALGIA - Plant Shop
{%- endcomment -%}

<section class="main-cart">
  <div class="container">
    <h1 class="cart-title">ショッピングカート</h1>

    {%- if cart.item_count > 0 -%}
      <form action="/cart" method="post" class="cart-form">
        <table class="cart-table">
          <thead>
            <tr>
              <th class="cart-th-product">商品</th>
              <th class="cart-th-price">価格</th>
              <th class="cart-th-quantity">数量</th>
              <th class="cart-th-total">小計</th>
              <th class="cart-th-remove"></th>
            </tr>
          </thead>
          <tbody>
            {%- for item in cart.items -%}
              <tr class="cart-item">
                <td class="cart-item-product">
                  <div class="cart-item-inner">
                    <a href="{{ item.url }}" class="cart-item-image">
                      {%- if item.image -%}
                        {{ item.image | image_url: width: 100 | image_tag }}
                      {%- endif -%}
                    </a>
                    <div class="cart-item-details">
                      <a href="{{ item.url }}" class="cart-item-title">{{ item.product.title }}</a>
                      {%- unless item.variant.title == 'Default Title' -%}
                        <p class="cart-item-variant">{{ item.variant.title }}</p>
                      {%- endunless -%}
                    </div>
                  </div>
                </td>
                <td class="cart-item-price" data-label="価格">
                  {{ item.price | money }}
                </td>
                <td class="cart-item-quantity" data-label="数量">
                  <div class="quantity-selector">
                    <button type="button" class="quantity-btn quantity-minus" data-action="decrease">-</button>
                    <input
                      type="number"
                      name="updates[]"
                      value="{{ item.quantity }}"
                      min="0"
                      class="quantity-input"
                      data-line="{{ forloop.index }}"
                    >
                    <button type="button" class="quantity-btn quantity-plus" data-action="increase">+</button>
                  </div>
                </td>
                <td class="cart-item-total" data-label="小計">
                  {{ item.line_price | money }}
                </td>
                <td class="cart-item-remove">
                  <a href="/cart/change?line={{ forloop.index }}&quantity=0" class="remove-btn" aria-label="削除">
                    &times;
                  </a>
                </td>
              </tr>
            {%- endfor -%}
          </tbody>
        </table>

        <div class="cart-footer">
          <div class="cart-note">
            <label for="cart-note">備考</label>
            <textarea id="cart-note" name="note" rows="3" placeholder="配送に関するご要望など">{{ cart.note }}</textarea>
          </div>

          <div class="cart-summary">
            <div class="cart-subtotal">
              <span>小計</span>
              <span class="cart-subtotal-price">{{ cart.total_price | money }}</span>
            </div>
            <p class="cart-shipping-note">配送料はチェックアウト時に計算されます</p>

            <div class="cart-actions">
              <button type="submit" name="update" class="btn btn-secondary">カートを更新</button>
              <button type="submit" name="checkout" class="btn btn-primary">ご購入手続きへ</button>
            </div>
          </div>
        </div>
      </form>
    {%- else -%}
      <div class="cart-empty">
        <p>カートに商品がありません</p>
        <a href="/collections/all" class="btn btn-primary">商品を見る</a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "カート",
  "settings": [],
  "presets": [
    {
      "name": "カート"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.main-cart {
  padding: 4rem 0;
}

.cart-title {
  text-align: center;
  margin-bottom: 3rem;
  font-size: 2.4rem;
}

.cart-table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 2rem;
}

.cart-table th {
  text-align: left;
  padding: 1rem;
  border-bottom: 2px solid #eee;
  font-size: 1.2rem;
  color: #666;
  text-transform: uppercase;
}

.cart-table td {
  padding: 1.5rem 1rem;
  border-bottom: 1px solid #eee;
  vertical-align: middle;
}

.cart-item-inner {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

.cart-item-image {
  width: 80px;
  height: 80px;
  flex-shrink: 0;
}

.cart-item-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 4px;
}

.cart-item-title {
  font-size: 1.4rem;
  color: #333;
  text-decoration: none;
}

.cart-item-title:hover {
  color: #2c5530;
}

.cart-item-variant {
  font-size: 1.2rem;
  color: #666;
  margin-top: 0.3rem;
}

.cart-item-price,
.cart-item-total {
  font-size: 1.4rem;
}

.quantity-selector {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.quantity-btn {
  width: 32px;
  height: 32px;
  border: 1px solid #ddd;
  background: white;
  border-radius: 4px;
  cursor: pointer;
  font-size: 1.4rem;
}

.quantity-btn:hover {
  background: #f5f5f0;
}

.quantity-input {
  width: 50px;
  text-align: center;
  padding: 0.5rem;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 1.4rem;
}

.remove-btn {
  font-size: 2rem;
  color: #999;
  text-decoration: none;
}

.remove-btn:hover {
  color: #e53935;
}

.cart-footer {
  display: flex;
  justify-content: space-between;
  gap: 3rem;
  margin-top: 2rem;
}

.cart-note {
  flex: 1;
}

.cart-note label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: 600;
}

.cart-note textarea {
  width: 100%;
  resize: vertical;
}

.cart-summary {
  width: 350px;
  background: #f5f5f0;
  padding: 2rem;
  border-radius: 8px;
}

.cart-subtotal {
  display: flex;
  justify-content: space-between;
  font-size: 1.6rem;
  font-weight: bold;
  margin-bottom: 1rem;
}

.cart-subtotal-price {
  color: #2c5530;
}

.cart-shipping-note {
  font-size: 1.2rem;
  color: #666;
  margin-bottom: 1.5rem;
}

.cart-actions {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.cart-actions .btn {
  width: 100%;
}

.cart-empty {
  text-align: center;
  padding: 4rem 0;
}

.cart-empty p {
  font-size: 1.6rem;
  color: #666;
  margin-bottom: 2rem;
}

@media (max-width: 768px) {
  .cart-table thead {
    display: none;
  }

  .cart-table tr {
    display: block;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #eee;
  }

  .cart-table td {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
    border: none;
  }

  .cart-table td::before {
    content: attr(data-label);
    font-weight: 600;
    font-size: 1.2rem;
  }

  .cart-item-product {
    flex-direction: column;
    align-items: flex-start !important;
  }

  .cart-item-product::before {
    display: none;
  }

  .cart-footer {
    flex-direction: column;
  }

  .cart-summary {
    width: 100%;
  }
}
{% endstylesheet %}

{% javascript %}
document.querySelectorAll('.quantity-btn').forEach(btn => {
  btn.addEventListener('click', function() {
    const input = this.parentElement.querySelector('.quantity-input');
    const currentValue = parseInt(input.value) || 0;

    if (this.dataset.action === 'increase') {
      input.value = currentValue + 1;
    } else if (this.dataset.action === 'decrease' && currentValue > 0) {
      input.value = currentValue - 1;
    }
  });
});
{% endjavascript %}
