{%- comment -%}
  Hero Banner Section
  LIFE NOSTALGIA - Plant Shop
{%- endcomment -%}

<section class="hero-banner">
  {%- if section.settings.background_image != blank -%}
    <div class="hero-background">
      {{ section.settings.background_image | image_url: width: 1920 | image_tag: loading: 'eager' }}
    </div>
  {%- endif -%}

  <div class="hero-content">
    <div class="container">
      {%- if section.settings.subheading != blank -%}
        <p class="hero-subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h1 class="hero-heading">{{ section.settings.heading }}</h1>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <p class="hero-text">{{ section.settings.text }}</p>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="btn btn-primary hero-btn">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "ヒーローバナー",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "背景画像"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "サブ見出し",
      "default": "LIFE NOSTALGIA"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "見出し",
      "default": "植物と暮らす"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "テキスト"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "ボタンテキスト",
      "default": "商品を見る"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "ボタンリンク"
    },
    {
      "type": "range",
      "id": "height",
      "label": "高さ (vh)",
      "min": 40,
      "max": 100,
      "step": 5,
      "default": 70,
      "unit": "vh"
    }
  ],
  "presets": [
    {
      "name": "ヒーローバナー"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.hero-banner {
  position: relative;
  min-height: {{ section.settings.height }}vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f0;
  overflow: hidden;
}

.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.hero-background img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-content {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 4rem 2rem;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 8px;
  max-width: 600px;
}

.hero-subheading {
  font-size: 1.4rem;
  letter-spacing: 0.2em;
  color: #2c5530;
  margin-bottom: 1rem;
  text-transform: uppercase;
}

.hero-heading {
  font-size: 4rem;
  color: #333;
  margin-bottom: 1.5rem;
  line-height: 1.2;
}

.hero-text {
  font-size: 1.6rem;
  color: #666;
  margin-bottom: 2rem;
  line-height: 1.8;
}

.hero-btn {
  padding: 1.4rem 3rem;
  font-size: 1.5rem;
}

@media (max-width: 768px) {
  .hero-banner {
    min-height: 60vh;
  }

  .hero-content {
    margin: 2rem;
    padding: 3rem 2rem;
  }

  .hero-heading {
    font-size: 2.8rem;
  }

  .hero-text {
    font-size: 1.4rem;
  }
}
{% endstylesheet %}
